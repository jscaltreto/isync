{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)version.txt$"],
      "matchStrings": [
        "isync_version=(?<currentValue>v\\d+\\.\\d+\\.\\d+)$"
      ],
      "datasourceTemplate": "git-tags",
      "depNameTemplate": "isync/isync",
      "registryUrlTemplate": "https://git.code.sf.net/p/",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["isync/isync"],
      "matchDatasources": ["git-tags"],
      "extractVersionTemplate": "v(?<version>.*)",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
